<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- الخلفية الثابتة (الداكنة) -->
    <item>
        <shape
            android:shape="oval">
            <solid android:color="#E0E0E0" />
            <size
                android:width="80dp"
                android:height="80dp" />
        </shape>
    </item>

    <!-- الشريط التقدمي -->
    <item>
        <rotate
            android:fromDegrees="270"
            android:toDegrees="270">
            <shape
                android:shape="oval"
                android:useLevel="true">
                <gradient
                    android:startColor="#64B5F6"
                    android:endColor="#2196F3"
                    android:type="sweep" />
                <size
                    android:width="80dp"
                    android:height="80dp" />
            </shape>
        </rotate>
    </item>

</layer-list>